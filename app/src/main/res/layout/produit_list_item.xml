<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:background="#FAFAFA">
            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/cerclebackgroundpink"
                    android:src="@drawable/ic_baseline_local_grocery_store_24"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/produitClick"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/produit_id"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="idProduit"
                    android:textStyle="italic"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/produit_nom"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:text="DesignationProduit"
                    android:padding="9dp"
                    android:textStyle="bold"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/produit_prix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PrixProduit"
                    android:padding="9dp"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
